{
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/out/paper",
    "latex-workshop.latex.external.build.command": "latexmk",
    "latex-workshop.latex.external.build.args": [
        "-pdf",
        "-synctex=1",
        "-file-line-error",
        "-outdir=%OUTDIR%",
        "-jobname=%DOCFILE%",
        "-interaction=nonstopmode",
        "%DOC%"
    ]
}

